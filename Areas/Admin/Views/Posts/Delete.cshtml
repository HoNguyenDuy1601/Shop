@model Shop.Models.Posts

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Delete Post</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div>
    <dl class="dl-horizontal">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <b>@Html.DisplayNameFor(model => model.Title)</b> : @Html.DisplayFor(model => model.Title)
            </div>
            <div class="col-lg-4 col-md-6">
                <b>@Html.DisplayNameFor(model => model.Description)</b> : @Html.DisplayFor(model => model.Description)
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <b>@Html.DisplayNameFor(model => model.Date)</b> : @Html.DisplayFor(model => model.Date)
            </div>
            <div class="col-lg-4 col-md-6">
                <b>@Html.DisplayNameFor(model => model.CreatedBy)</b> : @Html.DisplayFor(model => model.CreatedBy)
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <b>@Html.DisplayNameFor(model => model.OrderNumber)</b> : @Html.DisplayFor(model => model.OrderNumber)
            </div>
            <div class="col-lg-4 col-md-6">
                <b>@Html.DisplayNameFor(model => model.Show)</b> : @Html.DisplayFor(model => model.Show)
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <b>@Html.DisplayNameFor(model => model.idPost)</b> : @Html.DisplayFor(model => model.idPost)
            </div>
            <div class="col-lg-4 col-md-6">
                <b>@Html.DisplayNameFor(model => model.Image)</b> : <img class="img-fluid flex-shrink-0 mb-4" src="@Html.DisplayFor(model => model.Image)" style="height: 75px" alt="">
            </div>
        </div>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
