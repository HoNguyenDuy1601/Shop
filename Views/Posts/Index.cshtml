@model IEnumerable<Shop.Models.Posts>

@{
    Layout = "~/Views/Shared/_layout.cshtml";
    ViewBag.PageName = "Posts";
}

<!-- Hero Start -->
<div class="container-fluid bg-primary py-5 bg-hero mb-5">
    <div class="container py-5">
        <div class="row justify-content-start">
            <div class="col-lg-8 text-center text-lg-start">
                <h1 class="display-1 text-white mb-md-4">Blog Grid</h1>
                <br />
                <br />
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->
<!-- Blog Start -->
<div class="container py-5">
    <div class="row g-5">
        <!-- Blog list Start -->
        <div class="col-lg-8">
            <div class="row g-5">
                @foreach (var item in Model)
                {
                    if (item.Show == true)
                    {
                        <div class="col-md-6">
                            <div class="blog-item position-relative overflow-hidden">
                                <img class="img-fluid w-100" src="@item.Image" alt="">
                                <a class="blog-overlay" asp-action="Details" asp-route-id="@item.Id">
                                    <h4 class="text-white">@item.Title</h4>
                                    <span class="text-white fw-bold">@item.Date.ToString("dd/MM/yyyy")</span>
                                </a>
                            </div>
                        </div>
                    }
                }
                <div class="col-12 mt-5">
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-lg justify-content-center m-0">
@*                            <li class="page-item disabled">
                                <a class="page-link rounded-0" href="#" aria-label="Previous">
                                    <span aria-hidden="true"><i class="bi bi-arrow-left"></i></span>
                                </a>
                            </li>*@
                            @for (int i = 1; i <= ViewBag.NumberOfPage; i++)
                            {
                                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-postTitle="@ViewBag.PostTitle" asp-route-pageNumber="@i">@i</a></li>
                            }
@*                            <li class="page-item">
                                <a class="page-link rounded-0" href="#" aria-label="Next">
                                    <span aria-hidden="true"><i class="bi bi-arrow-right"></i></span>
                                </a>
                            </li>*@
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Blog list End -->
        <!-- Sidebar Start -->
        <div class="col-lg-4">
            <!-- Search Form Start -->
            <form action="/Posts?postTitle=@ViewBag.PostTitle">
                <div class="mb-5">
                    <div class="input-group">
                        <input type="text" class="form-control p-3" placeholder="Search post" name="postTitle" value="@ViewBag.PostTitle" id="postTitle">
                        <button class="btn btn-primary px-4" type="submit"><i class="bi bi-search"></i></button>
                    </div>
                </div>
            </form>
            <!-- Search Form End -->
            <!-- Category Start -->
            <div class="mb-5">
                <h2 class="mb-4">Categories</h2>
                <div class="d-flex flex-column justify-content-start bg-primary p-4">
                    @foreach (var type in ViewBag.Types)
                    {
                        <a class="fs-5 fw-bold text-white mb-2" asp-action="Type" asp-route-id="@type.Id"><i class="bi bi-arrow-right me-2"></i>@type.Type</a>
                    }
                </div>
            </div>
            <!-- Category End -->
            <!-- Image Start -->
            <div class="mb-5">
                <img src="~/assets/img/blog-4.jpg" alt="" class="img-fluid rounded">
            </div>
            <!-- Image End -->
            <!-- Plain Text Start -->
            <div>
                <div class="bg-primary text-center text-white" style="padding: 30px;">
                    <p>Good friends, good books, and a sleepy conscience: this is the ideal life</p>
                </div>
            </div>
            <!-- Plain Text End -->
        </div>
        <!-- Sidebar End -->
    </div>
</div>
<!-- Blog End -->